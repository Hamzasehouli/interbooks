header.header
    nav.nav
        a.logo-link(href='/')
            img.logo(src='/images/logo-orange.png' alt='interbook blue logo')
        form.nav__form
            input.nav__form__input(type='text' placeholder='Search by Title, Authour, ISBN')
            button.nav__form__button(type='submit')
                svg.nav__form__icon
                    use(href='/sprite.svg#icon-search')
        ul.nav__list
            if !user
                li.nav__items
                    a.nav__link.btn--standard(href='/login') Log in
                li.nav__items
                    a.nav__link.btn--standard(href='/signup') Signup
            li.nav__items
                a.nav__link.btn--standard(href='/wishlist') Wishlist
            li.nav__items
                a.nav__link.btn--standard(href='/cart') Cart
            if user
                li.nav__items
                    a.nav__link.btn--standard(href='/profile') Profile
                
                
